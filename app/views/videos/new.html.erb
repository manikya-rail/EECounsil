<div class="inr-midle-wrp">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="registr-inr">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="panrl-body-inr">
                <div class="panel-bx-login">
                  <%= form_for @video do |f| %>
                    <% if @video.errors.any? %>
                      <div id="error_explanation" align="center">
                        <% @video.errors.full_messages.each do |message| %>
                          <p><%= message %></p>
                        <% end %>
                      </div>
                    <% end %>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.fields_for :media do |i| %>
                            <%= i.label :Select_video %>:<br/>
                            <%= i.file_field :item, class: "form-control"%>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <%= f.hidden_field :home_intro_video, value: true%>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.label :Description %>:<br/>
                          <%= f.cktext_area :description, class: "form-control" %>
                        </div>
                      </div>
                    </div>
                    <%= f.submit 'Add Video', class: "btn btn-success" %>
                  <% end %>
                  <br>
                  <%= link_to 'Back', videos_path, class: 'btn btn-default'%>
                </div>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :name do %>
  Add Video
<% end %>
<script type="text/javascript">
$(document).ready(function() {
    $('.js-example-basic-single').select2();
});
</script>
