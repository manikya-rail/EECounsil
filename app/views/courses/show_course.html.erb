<div class="container">
  <hr>
    <div class="courses-bx">
      <div class="courses-bx-inr">
        <div class="row">
          <div class="col-md-8"><% if @course.media.present? %><%= image_tag @course.media.first.item_url %><% end %></div>
        </div>
        <h2><%= @course[:name] %></h2>
        <p><%= @course[:description].html_safe %></p>
        <div class="price">
          <p>Price: <strong>$<%= @course[:price] %></strong></p>
        </div>
        <hr>
        <div class="more-btns">
          <%= link_to 'View Pages' , course_path(@course), class: "btn btn-primary"%>
          <% if @purchased == false %><%= link_to 'Delete Course', course_path(@course), class: "btn btn-danger",method: :delete, data: {confirm: "Are you sure?"} %><% end %>
          <%= link_to 'Edit Course', edit_course_path(@course), class: "btn btn-success"%>
        </div>
      </div>
    </div></br>
  <%= link_to 'Back' , courses_path, class: 'btn btn-default' %>
</div>

<% content_for :name do %>
  Courses
<% end %>
