<div class="inr-midle-wrp">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="registr-inr">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="panrl-body-inr">
                <div class="panel-bx-login">
                  <%= form_for @blog do |f| %>
                    <% if @blog.errors.any? %>
                      <div id="error_explanation" align="center">
                        <% @blog.errors.full_messages.each do |message| %>
                          <p><%= message %></p>
                        <% end %>
                      </div>
                    <% end %>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.label :Select_category %>:<br/>
                          <%= f.select(:category_id, options_from_collection_for_select(Category.all, "id", "name"),{ }, class: 'form control', style: 'width: 100%;')%>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.fields_for :media do |i| %>
                          <%= i.label :Select_image %>:<br/>
                          <%= i.file_field :item, class: "form-control", accept:'image/*'%>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.label :Title %>:<br/>
                          <%= f.text_field :title, class: "form-control" , placeholder: "Title"%>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <div class="frm-grp-inr">
                          <%= f.label :Description %>:<br/>
                          <%= f.cktext_area :description, class: "form-control" %>
                        </div>
                      </div>
                    </div>
                    <%= f.submit 'Add Blog', class: "btn btn-success" %>
                  <% end %>
                  <%= link_to 'Back', blogs_path, class: 'btn btn-default'%>
                </div>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :name do %>
  Add Blog
<% end %>
<script type="text/javascript">
$(document).ready(function() {
    $('.js-example-basic-single').select2();
});
</script>