              <%#= image_tag "cancelled.jpeg", class: "img-responsive logo-fixed" %>
            <!-- </div> -->
          </div>
          <div class="col-md-4">
            <div id="modalBody" class="modal-body" style="text-align: center; font-weight: bold; color: red">
            </div>
            <div id="modalTiming" class="modal-body" style="text-align: center; font-weight: bold; color: red">
            </div>
          </div>
        </div>
        <div class="row modal-body">
