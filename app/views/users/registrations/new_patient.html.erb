<%= form_for @user, url: {action: "create_patient"} do |f| %>
<% if @user.errors.any? %>
    <div id="error_explanation" align="center">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
<% end %>
  <div class="inr-midle-wrp">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="registr-inr">
            <div class="panel panel-default">
              <div class="panel-heading">
                <a href="#"><%#= image_tag "panel-logo.png", class: "img-responsive" %></a>
              </div>
              <div class="panel-body">
                <div class="panrl-body-inr">
                  <div class="panel-bx-login">
                    <div class="form_group" style="width: 30%;">
                      <%= f.hidden_field :added_by, value: current_user.id %>
                    </div>

                    <div class="form_group" style="width: 30%;">
                      <%= f.hidden_field :role_name, value: "patient" %>
                    </div>

                    <div class="form_group" style="width: 30%;">
                      <%= f.hidden_field :status, value: true %>
                    </div>

                    <div class="form_group" style="width: 30%;">
                      <%= f.hidden_field :approved, value: true %>
                    </div>

                    <%= render 'users/registrations/patient_form', f: f %>

                    <div class="submit-btn text-center">
                      <%= f.submit 'Add Patient' ,class: "btn btn-default btn-blue"%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% content_for :name do %>
  Add Patients
<% end %>