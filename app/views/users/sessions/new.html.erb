<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="inr-midle-wrp">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="login-inr">
            <div class="panel panel-default">
              <div class="panel-heading">
                <%= image_tag 'panel-logo.png', class: 'img-responsive' %>
              </div>
              <div class="panel-body">
                <div class="panrl-body-inr">
                  <div class="panel-bx-login">
                    <div class="form-group">
                      <div class="frm-grp-inr">
                        <i class="fa fa-envelope"></i>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email'%>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="frm-grp-inr">
                        <i class="fa fa-lock"></i>
                        <%= f.password_field :password, autocomplete: "current-password",class: 'form-control', placeholder:'Password' %>
                      </div>
                    </div>
                    <div class="form-group forgt-pass">
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                    </div>
                    <div class='custom-checkbox'>
                      <%= f.check_box :remember_me, class: 'check-custom' %>
                      <%= f.label :remember_me, class: 'check-custom' %>
                    </div>

                    <div  class="submit-btn">
                      <%= f.submit 'Log in', class: 'btn btn-default btn-block btn-blue' %>
                    </div>
                    <!-- <div class="botom-info text-center">
                      or
                      <%#= link_to "Sign up as Patient", new_user_registration_path(role_name: "patient") %> /
                      <%#= link_to "Sign up as Therapist", new_user_registration_path(role_name: "therapist") %>
                    </div> -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% content_for :name do %>
  Admin Panel
<% end %>